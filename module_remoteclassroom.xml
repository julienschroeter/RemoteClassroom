<?xml version="1.0" encoding="UTF-8"?>
<project name="module_remoteclassroom" default="compile.module.remoteclassroom">
  <dirname property="module.remoteclassroom.basedir" file="${ant.file.module_remoteclassroom}"/>
  
  <property name="module.jdk.home.remoteclassroom" value="${jdk.home.1.7}"/>
  <property name="module.jdk.bin.remoteclassroom" value="${jdk.bin.1.7}"/>
  <property name="module.jdk.classpath.remoteclassroom" value="jdk.classpath.1.7"/>
  
  <property name="compiler.args.remoteclassroom" value="${compiler.args}"/>
  
  <property name="remoteclassroom.output.dir" value="${module.remoteclassroom.basedir}/bin"/>
  <property name="remoteclassroom.testoutput.dir" value="${module.remoteclassroom.basedir}/bin"/>
  
  <path id="remoteclassroom.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="remoteclassroom.module.production.classpath">
    <path refid="${module.jdk.classpath.remoteclassroom}"/>
    <pathelement location="${basedir}/../sqlite-jdbc-3.7.2.jar"/>
  </path>
  
  <path id="remoteclassroom.runtime.production.module.classpath">
    <pathelement location="${remoteclassroom.output.dir}"/>
    <pathelement location="${basedir}/../sqlite-jdbc-3.7.2.jar"/>
  </path>
  
  <path id="remoteclassroom.module.classpath">
    <pathelement location="${remoteclassroom.output.dir}"/>
    <path refid="${module.jdk.classpath.remoteclassroom}"/>
    <pathelement location="${basedir}/../sqlite-jdbc-3.7.2.jar"/>
  </path>
  
  <path id="remoteclassroom.runtime.module.classpath">
    <pathelement location="${remoteclassroom.output.dir}"/>
    <pathelement location="${basedir}/../sqlite-jdbc-3.7.2.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.remoteclassroom">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.remoteclassroom">
    <patternset refid="excluded.from.module.remoteclassroom"/>
  </patternset>
  
  <path id="remoteclassroom.module.sourcepath">
    <dirset dir="${module.remoteclassroom.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.remoteclassroom" depends="compile.module.remoteclassroom.production,compile.module.remoteclassroom.tests" description="Compile module RemoteClassroom"/>
  
  <target name="compile.module.remoteclassroom.production" depends="register.custom.compilers" description="Compile module RemoteClassroom; production classes">
    <mkdir dir="${remoteclassroom.output.dir}"/>
    <javac2 destdir="${remoteclassroom.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.remoteclassroom}/javac">
      <compilerarg line="${compiler.args.remoteclassroom}"/>
      <bootclasspath refid="remoteclassroom.module.bootclasspath"/>
      <classpath refid="remoteclassroom.module.production.classpath"/>
      <src refid="remoteclassroom.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.remoteclassroom"/>
    </javac2>
    
    <copy todir="${remoteclassroom.output.dir}">
      <fileset dir="${module.remoteclassroom.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.remoteclassroom.tests" depends="register.custom.compilers,compile.module.remoteclassroom.production" description="compile module RemoteClassroom; test classes" unless="skip.tests"/>
  
  <target name="clean.module.remoteclassroom" description="cleanup module">
    <delete dir="${remoteclassroom.output.dir}"/>
    <delete dir="${remoteclassroom.testoutput.dir}"/>
  </target>
</project>